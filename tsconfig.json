{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"]
}
